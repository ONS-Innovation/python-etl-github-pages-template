site_name: ${{ values.docs_site_name or values.repository_name }}
site_description: ${{ values.docs_site_description or values.repository_description }}
site_url: https://${{ values.repository_owner }}.github.io/${{ values.repository_name }}/
repo_url: https://github.com/${{ values.repository_owner }}/${{ values.repository_name }}
repo_name: ${{ values.repository_name }}

docs_dir: docs
site_dir: site

theme:
  name: material
  palette:
    scheme: default
    primary: blue
    accent: blue
  features:
    - navigation.tabs
    - navigation.sections
    - navigation.expand
    - navigation.top
    - search.highlight
    - search.share
    - content.code.copy
    - content.code.select

markdown_extensions:
  - admonition
  - codehilite:
      guess_lang: false
  - pymdownx.superfences
  - pymdownx.tabbed:
      alternate_style: true
  - toc:
      permalink: true
  - tables
  - attr_list
  - md_in_html

nav:
  - Home: index.md
  - Data Report: data_report.md

plugins:
  - search
  - mkdocstrings:
      handlers:
        python:
          paths: [.]
          options:
            docstring_style: google
            show_source: true
            show_root_heading: true
            show_root_toc_entry: true

extra:
  generator: false
  social:
    - icon: fontawesome/brands/github
      link: https://github.com/${{ values.repository_owner }}/${{ values.repository_name }}

copyright: Generated by ${{ values.repository_name }} 